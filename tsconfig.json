{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    
    // Enabling these prevents 80% of common bugs
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true // Adds better compatibility for libraries like bcrypt
  },
  "include": ["src/**/*"], // Ensure all files in src are tracked
  "exclude": ["node_modules", "dist"]
}